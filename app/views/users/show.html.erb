<!-- app/views/users/show.html.erb -->
<h1>Perfil de <%= @user.email %></h1>

<!-- Mostrar la foto de perfil del usuario -->
<%= image_tag @user.profile_picture if @user.profile_picture.attached? %>

<!-- Mostrar los datos relevantes del usuario -->
<p><strong>Datos relevantes:</strong> <%= @user.relevant_data %></p>

<!-- Enlace a las postulaciones del usuario -->
<%= link_to "Mis postulaciones", postulations_path(user_id: @user.id) %>
